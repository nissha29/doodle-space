generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  name         String
  email        String @unique
  password     String
  avatar       String?
  rooms        Room[]
  chats        Chat[]
}

model Room {
  id           Int @id @default(autoincrement())
  slug         String @unique
  adminId      String
  createdAt    DateTime @default(now())
  admin        User @relation(fields: [adminId], references: [id])
  chats        Chat[]
}

// change the type of message, it should be Json which contains dimensions of different shapes like circle, rectangle etc
model Chat {
  id           Int @id @default(autoincrement())
  roomId       Int
  message      String
  userId       String
  user         User @relation(fields: [userId], references: [id])
  room         Room @relation(fields: [roomId], references: [id])
}